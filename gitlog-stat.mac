// git log --stat

disabledraw;
disablehistory 0x0041;

$$git = "git.exe log --stat";
$$cmd = $$git;
$$dir = directory2 + "\\";
$$log = getenv("TMP") + "\\_logstat" + ".all" ;
runex $$cmd,0,0,"",2,$$log,0,"",2,$$dir,0,0,encode;
openfile "/r " + $$log;

// 実行コマンド表示する
##mode = 0;
if (tabmode) {
  ##mode = 3;
}
title $$cmd,##mode;
title -1,##mode;
endmacro;
