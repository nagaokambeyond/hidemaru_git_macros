// githubで検索

disabledraw;
disablehistory 0x0041;
beginclipboardread;
if (selecting == 0) {
  copyword;
} else {
  copy;
}
$$arg = getclipboard;
$$word = input("githubで検索", $$arg);
if ((result == false) || ($$word == "")) {
  endmacro;
}
openbyshell "https://github.com/search?q=" + leftstr($$word, 70);
endmacro;
